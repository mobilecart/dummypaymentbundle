<script type="text/javascript">
$(function() {

    paymentWidget.addPostDataGetter("{{ code }}", function(){
        var postData = {};
        var code = "{{ code }}";
        $('div#' + code).find('input, select, textarea').each(function(e){
            var input = $(this);
            var name = input.attr('name');
            postData[name] = input.val();
        });
        postData['payment_method'] = code;
        return postData;
    });
});
</script>
