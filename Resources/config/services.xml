<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cart.payment.method.dummy.class">MobileCart\DummyPaymentBundle\Service\DummyPaymentService</parameter>
        <parameter key="cart.listener.payment.method.dummy.js.class">MobileCart\DummyPaymentBundle\EventListener\Checkout\DummyPaymentJavascript</parameter>
        <parameter key="cart.payment.method.dummy.enabled">1</parameter>
        <parameter key="cart.payment.method.dummy.testmode">1</parameter>
        <parameter key="cart.payment.method.dummy.authorize">1</parameter>
        <parameter key="cart.payment.method.dummy.capture">1</parameter>
    </parameters>
    
    <services>

        <!-- Service : Dummy Payment Method Service -->
        <service id="cart.payment.method.dummy" lazy="true" class="%cart.payment.method.dummy.class%">
            <call method="setFormFactory">
                <argument type="service" id="form.factory" />
            </call>
            <call method="setIsTestMode">
                <argument type="string">%cart.payment.method.dummy.testmode%</argument>
            </call>
            <call method="setEnableAuthorize">
                <argument type="string">%cart.payment.method.dummy.authorize%</argument>
            </call>
            <call method="setEnableCaptureOnInvoice">
                <argument type="string">%cart.payment.method.dummy.capture%</argument>
            </call>
        </service>

        <!-- Event Listener: Collect Dummy Payment Method Service -->
        <service id="cart.listener.payment.method.dummy" lazy="true" class="%cart.listener.payment.method.handler.class%">
            <tag name="kernel.event_listener" event="payment_method.collect" method="onPaymentMethodCollect" priority="50" />
            <call method="setPaymentMethodService">
                <argument type="service" id="cart.payment.method.dummy" />
            </call>
            <call method="setIsEnabled">
                <argument type="string">%cart.payment.method.dummy.enabled%</argument>
            </call>
        </service>

        <!-- Event Listener: Add Javascript to Checkout -->
        <service id="cart.listener.payment.method.dummy.js" lazy="true" class="%cart.listener.payment.method.dummy.js.class%">
            <tag name="kernel.event_listener" event="checkout.view.return" method="onCheckoutViewReturn" priority="60" />
            <call method="setPaymentMethodService">
                <argument type="service" id="cart.payment.method.dummy" />
            </call>
        </service>

    </services>
    
</container>
